[user]
name = Zhijin LI
email = jonathan.zj.lee@gmail.com

[alias]
st = status
ck = checkout
br = branch
up = rebase
cm = commit
up = log --branches --not --remotes --oneline
df = diff --word-diff
lg = log --branches --remotes --tags --graph --oneline --decorate

[core]
editor = emacs
excludesfile = ~/.gitignore

[branch]
autosetuprebase = always

[credential]
helper = cache --timeout=7200

[http]
sslVerify = false
